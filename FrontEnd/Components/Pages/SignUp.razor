@page "/signup"
@using ClassLibraryModel
@using ClassLibrarydal
@rendermode InteractiveServer
<PageTitle>SignUp</PageTitle>

<div class="sign-container">
    <h1>Sign Up</h1>
    <div class="form-group">
        <label>First Name:</label>
        <input type="text" placeholder="Enter First name" @bind="modelStudent.Name" />
    </div>
    <div class="form-group">
        <label>Email Address:</label>
        <input type="text" placeholder="Enter Email address" @bind="modelStudent.EmailAddress" />
    </div>
    <div class="form-group">
        <label>Password:</label>
        <input type="password" placeholder="Enter password" @bind="modelStudent.pass" />
    </div>
    <button @onclick="SaveStudent" type="button" class="btn-signup">Save</button>
    <button @onclick="NAV" type="button" class="btn-signup">LogIn</button>
</div>


@code {

    [Inject]
    private NavigationManager NavigationMan { get; set; }
    ModelUser modelStudent { get; set; } = new ModelUser();

    private void SaveStudent()
    {

        DALClass.SaveInformation(modelStudent);
        
    }
    private void NAV()
    {
       
        NavigationMan.NavigateTo("/signin");
    }
}
